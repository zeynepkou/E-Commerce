<script>

    // Loglar ve Stok Verisi Güncelleme
    setInterval(function () {
        // Loglar
        $.ajax({
            url: '/Admin/GetLogs',
            type: 'GET',
            success: function (logs) {
                let logContainer = $('#logContainer');
                logContainer.empty();
                logs.forEach(log => {
                    logContainer.append(`
                                 <tr>
                                     <td>${log.logTime}</td>
                                     <td>${log.logType}</td>
                                     <td>${log.logMessage}</td>
                                 </tr>
                             `);
                });
            },
